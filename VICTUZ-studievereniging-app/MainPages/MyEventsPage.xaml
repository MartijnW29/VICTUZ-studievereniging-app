<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VICTUZ_studievereniging_app.MainPages.MyEventsPage"
             Title="Mijn Evenementen">

    <Grid RowDefinitions="*,Auto">
        <!-- Andere content kan hier komen -->
        <VerticalStackLayout Grid.Row="0">
            <!-- Andere elementen die je bovenaan wil -->
            <Label Text="Welkom bij Mijn Evenementen" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
        </VerticalStackLayout>

        <!-- De knop komt in de tweede rij, onderaan -->
        <Button Text="Maak Event Aan" Clicked="OnCreateEventClicked" Grid.Row="1" />
    </Grid>
</ContentPage>
